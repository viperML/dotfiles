{
  // Telemetry
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  "redhat.telemetry.enabled": false,
  "Lua.telemetry.enable": false,


  // Basic
  "diffEditor.renderSideBySide": false,
  "editor.bracketPairColorization.enabled": true,
  "editor.cursorStyle": "line",
  "editor.inlineSuggest.enabled": true,
  "editor.insertSpaces": true,
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": true,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.size": "proportional",
  "editor.quickSuggestionsDelay": 0,
  "editor.rulers": [160],
  "editor.scrollbar.horizontal": "auto",
  "editor.scrollbar.horizontalScrollbarSize": 5,
  "editor.scrollbar.vertical": "visible",
  "editor.scrollbar.verticalScrollbarSize": 8,
  "editor.semanticHighlighting.enabled": true,
  "editor.suggest.preview": true,
  "editor.tabCompletion": "on",
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.wordWrap": "off",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.sortOrder": "type",
  "extensions.ignoreRecommendations": true,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 500,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "security.workspace.trust.enabled": false,
  "update.mode": "none",
  "window.menuBarVisibility": "compact",
  "window.title": "${dirty}${activeEditorShort} @ ${activeFolderLong}${separator}",
  "workbench.editor.untitled.hint": "hidden",
  "workbench.sideBar.location": "left",
  "workbench.startupEditor": "none",  "editor.tabSize": 4,


  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true
  },

  // Copilot
  "github.copilot.enable": {
    "*": true,
    "yaml": false,
    "plaintext": true,
    "markdown": true
  },


  // Git
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.ignoreWindowsGit27Warning": true,
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.hovers.enabled": false,
  "scm.diffDecorations": "gutter",
  "workbench.colorTheme": "Dark Material Dracula",


  // Icons
  "workbench.productIconTheme": "material-product-icons",
  "material-icon-theme.opacity": 1,
  "material-icon-theme.saturation": 1,
  "workbench.iconTheme": "material-icon-theme",
  "helium-icon-theme.folders.color": "#90a4ae",

  // Fonts
  "editor.fontSize": 14,
  "editor.fontFamily": "'JetBrains Mono Medium', 'Font Awesome 5 Free Solid', 'Font Awesome 5 Free Regular', 'Font Awesome 5 Brands'",
  //"editor.fontFamily": "'Roboto', 'Font Awesome 5 Free Solid', 'Font Awesome 5 Free Regular', 'Font Awesome 5 Brands'",
  "terminal.integrated.fontFamily": "'JetBrains Mono Medium', 'Font Awesome 5 Free Solid', 'Font Awesome 5 Free Regular', 'Font Awesome 5 Brands'",
  "debug.console.fontFamily": "'JetBrains Mono Medium', 'Font Awesome 5 Free Solid', 'Font Awesome 5 Free Regular', 'Font Awesome 5 Brands'",
  "debug.toolBarLocation": "docked",
  "editor.fontLigatures": true,

  // ï…» ï„¡ __ |> <->  == >=> @
  // Custom italic fonts
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          //following will be in italic (=FlottFlott)
          "comment",
          "entity.name.type.class", //class names
          "keyword", //import, export, returnâ€¦
          // "constant", //String, Number, Booleanâ€¦, this, super
          "storage.modifier", //static keyword
          // "storage.type.class.js" //class keyword
        ],
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": [
          //following will be excluded from italics (VSCode has some defaults for italics)
          "invalid",
          "keyword.operator",
          "constant.numeric.css",
          "keyword.other.unit.px.css",
          "constant.numeric.decimal.js",
          "constant.numeric.json"
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },
  "terminal.integrated.cursorStyle": "line",

  // Colors
  "workbench.colorCustomizations": {
    "editor.background": "#121212",
    "minimap.background": "#1212125e",
    "sideBar.foreground": "#999999",
    "scrollbarSlider.background": "#333333",
    "scrollbarSlider.hoverBackground": "#444444",
    "editorRuler.foreground": "#202020",
    "statusBar.foreground": "#121212",
    "statusBar.background": "#a8e0ba",
    "statusBar.noFolderBackground": "#a8e0ba",
    "statusBar.debuggingBackground": "#a8e0ba",
    "statusBarItem.remoteBackground": "#A8D5E0",
    "statusBarItem.remoteForeground": "#121212",
    "statusBar.border": "#ffffff00"
  },



  // Latex
  "[latex]": {
    "editor.rulers": [
      70
    ],
    "rewrap.autoWrap.enabled": true,
    "editor.defaultFormatter": "nickfode.latex-formatter",
  },
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.latex.outDir": "%DIR%/_build",
  "latex-workshop.synctex.afterBuild.enabled": true,
  "latex.server.autoDownload": true,
  "latex-workshop.latex.autoBuild.run": "never",
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk-pdf",
      "command": "latexmk",
      "args": [
        "-pdf",
        "-auxdir=%OUTDIR%",
        "-outdir=%OUTDIR%",
        "-synctex=1",
        "--shell-escape",
        "%DOC_EXT%"
      ]
    },
    {
      "name": "latexmk-xelatex",
      "command": "latexmk",
      "args": [
        "-xelatex",
        "-auxdir=%OUTDIR%",
        "-outdir=%OUTDIR%",
        "-synctex=1",
        "--shell-escape",
        "%DOC_EXT%"
      ]
    },
    {
      "name": "latexmk-pvc",
      "command": "latexmk",
      "args": [
        "-f",
        "-pvc",
        "-pdf",
        "-auxdir=%OUTDIR%",
        "-outdir=%OUTDIR%",
        "-synctex=1",
        "--shell-escape",
        "%DOC_EXT%"
      ]
    }
  ],
  "latex-workshop.latex.recipes": [
    {
      "name": "latexmk (pdftex backend)",
      "tools": [
        "latexmk-pdf"
      ]
    },
    {
      "name": "latexmk (xelatex backend)",
      "tools": [
        "latexmk-xelatex"
      ]
    },
    // {
    //   "name": "latexmk ðŸ”„",
    //   "tools": ["latexmk-pvc"]
    // }
  ],

  // Associations
  "files.associations": {
    "*.m": "matlab",
    "**/*.html": "html",
    "**/templates/**/*.html": "django-html",
    "**/templates/**/*": "django-txt",
    "**/requirements{/**,*}.{txt,in}": "pip-requirements",
    "**/i3/config": "i3",
    "**/polybar/config": "ini"
  },
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },



  // Web
  "prettier.tabWidth": 2,
  "[json,javascript,css,html,jsonc]": {
    "editor.defaultFormatter": "remimarsal.prettier-now",
    "editor.detectIndentation": false,
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "[xml]": {
    // "editor.defaultFormatter": "remimarsal.prettier-now",
    "editor.detectIndentation": false,
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },

  "[nix]": {
    "editor.detectIndentation": false,
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },


  // Python
  "python.linting.pylintEnabled": true,
  "python.linting.enabled": true,
  "vsintellicode.python.completionsEnabled": true,
  "python.defaultInterpreterPath": "/usr/bin/python",
  "[python]": {
    "editor.defaultFormatter": "ms-python.python",
    "editor.rulers": [90]
  },

  // Powershell
  "powershell.integratedConsole.showOnStartup": false,
  "powershell.startAutomatically": false,

  // Vim
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.easymotion": true,
  "vim.enableNeovim": false,
  "vim.highlightedyank.enable": true,
  "vim.showMarksInGutter": true,
  "vim.statusBarColorControl": true,
  "vim.statusBarColors.commandlineinprogress": "#e0a8c4",
  "vim.statusBarColors.insert": "#a8e0ba",
  "vim.statusBarColors.normal": "#A8D5E0",
  "vim.statusBarColors.searchinprogressmode": "#e0a8c4",
  "vim.statusBarColors.visual": "#a8a8e0",
  "vim.statusBarColors.visualblock": "#a8a8e0",
  "vim.statusBarColors.visualline": "#a8a8e0",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "<space>"
      ],
      "commands": [
        "vspacecode.space"
      ]
    },
    {
      "before": [
        ","
      ],
      "commands": [
        "vspacecode.space",
        {
          "command": "whichkey.triggerKey",
          "args": "m"
        }
      ]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": [
        "<space>"
      ],
      "commands": [
        "vspacecode.space"
      ]
    },
    {
      "before": [
        ","
      ],
      "commands": [
        "vspacecode.space",
        {
          "command": "whichkey.triggerKey",
          "args": "m"
        }
      ]
    }
  ],

  // Spell check
  "cSpell.language": "en,es",
  "cSpell.enabledLanguageIds": [
      "markdown",
      "latex"
  ],
  "cSpell.enabled": true,
  "cSpell.showStatus": true,
  "cSpell.words": [],

  // Unsorted

  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  }

}
