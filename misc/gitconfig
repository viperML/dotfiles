# vim ft=gitconfig
[core]
  eol=lf
  autocrlf=input
  untrackedcache = true
  fsmonitor = true
[advice]
  addEmptyPathspec = false
[credential]
	helper = libsecret
[credential "https://github.com"]
  helper=
  helper=!gh auth git-credential
[credential "https://gist.github.com"]
  helper=
  helper=!gh auth git-credential
[init]
  defaultbranch=master
[pull]
  ff=only
  rebase=false
[push]
  default = current
[user]
  email=ayatsfer@gmail.com
  name=Fernando Ayats
[merge]
  conflictstyle = diff3
[diff]
  colorMoved = default
  tool = difftastic
[difftool]
  prompt = false
[difftool "difftastic"]
  cmd = difft "$LOCAL" "$REMOTE"
[pager]
  diff = false
  difftool = false
[include]
  path = ~/.config/git/local
[rerere]
  enabled = true
[fetch]
  writeCommitGraph = true
  showForcedUpdates = true
[rebase]
  updateRegs = true
[safe]
  directory=*
[alias]
  logs = !git --no-pager log --pretty=format:'%Cgreen%h%Creset - %Cblue%an%Creset @ %ar : %s' --reverse -n 40
  logtags = !git --no-pager log --tags --simplify-by-decoration --pretty=format:'%Cgreen%h%Creset -%d - %Cblue%an%Creset @ %ar : %s' --reverse
  rewind = !git restore --staged `git-root` && git restore `git-root` && git clean -df
  forgor = !git commit --amend --date=now --no-edit
  pul = !git merge --ff-only
[feature]
  manyFiles = true
[submodule]
  recurse = true
  fetchJobs = 0
[clone]
  filterSubmodules = true
[checkout]
  workers = 0
[url "git@github.com:"]
  insteadOf = "github:"
[commit]
  verbose = true
